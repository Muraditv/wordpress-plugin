		/*
		* Adds the menu item to the wordpress admin
		* @author sameast
		* @none
		*/ 
        function s3bubble_oembed_admin_menu(){

			add_menu_page( 's3bubble_oembed', 'S3Bubble Oembed', 'manage_options', 's3bubble_oembed', array($this, 's3bubble_oembed_admin'), plugins_url('dist/img/trans.png',__FILE__ ), 10);

