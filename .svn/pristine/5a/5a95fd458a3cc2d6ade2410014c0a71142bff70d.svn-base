    	/*
		* Add javascript to the footer connect to wp_footer()
		* @author sameast
		* @none
		*/ 
		function s3bubble_oembed_admin(){ 


			if ( isset($_POST['submit']) ) {
				$nonce = $_REQUEST['_wpnonce'];
				if (! wp_verify_nonce($nonce, 's3bubble-oembed') ) die('Security check failed'); 
				if (!current_user_can('manage_options')) die(__('You cannot edit the s3bubble media options.'));
				check_admin_referer('s3bubble-oembed');	
				// Get our new option values
				$s3bubble_oembed_app_key	     = $_POST['s3bubble_oembed_app_key'];

			    // Update the DB with the new option values
				update_option("s3bubble_oembed_app_key", $_POST['s3bubble_oembed_app_key']);

				//set POST variables
				$alert = '';
				$url = 'https://s3api.com/v3/main_plugin/auth';
				$response = wp_remote_post( $url, array(
					'method' => 'POST',
					'sslverify' => false,
					'timeout' => 10,
					'redirection' => 5,
					'httpversion' => '1.0',
					'blocking' => true,
					'headers' => array(),
					'body' => array(
						'AccessKey' => $s3bubble_oembed_app_key
					),
					'cookies' => array()
				    )
				);

				if ( is_wp_error( $response ) ) {

				   $error_message = $response->get_error_message();
				   $alert = '<div class="error"><p>' . $error_message . '</p></div>';

				} else {

					$data = json_decode($response['body']);
					if($data->error){
						
						update_option("s3bubble_oembed_app_user_id", 0);
						$alert = '<div class="error"><p>' . $data->message . '</p></div>';
					
					}else{
					
						update_option("s3bubble_oembed_app_user_id", $data->data->user_id);
						$alert = '<div class="updated"><p>' . $data->message . '</p></div>';
					
					}

				}

			}

			$s3bubble_oembed_app_key = get_option("s3bubble_oembed_app_key");
			$s3bubble_oembed_app_user_id = get_option("s3bubble_oembed_app_user_id");

